{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["./types/*", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "isolatedModules": true,
    "moduleResolution": "Node",
    "strict": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
